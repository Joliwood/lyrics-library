{
  "name": "lyrics-library",
  "version": "1.1.0",
  "main": "app/index.ts",
  "type": "commonjs",
  "repository": "https://github.com/Joliwood/lyrics-library.git",
  "author": "Guillaume <jolibois.contact@gmail.com>",
  "license": "MIT",
  "engine": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "check:full": "yarn typescript && yarn eslint",
    "compile": "graphql-codegen --config codegen.ts",
    "dev": "nodemon --ext ts --exec ts-node ./app/index.ts",
    "eslint": "eslint .",
    "generate:schema": "ts-node ./app/services/schemaMerger.ts && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "knex:migration": "knex migrate:make update_the_name",
    "knex:seed:dev": "knex seed:run --env development",
    "knex:seed:local": "knex seed:run --env local",
    "knex:update:dev": "knex migrate:latest --env development",
    "knex:update:local": "knex migrate:latest --env local",
    "start": "ts-node ./dist/app/index.js",
    "typescript": "yarn tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@faker-js/faker": "^8.0.2",
    "@nic-jennings/sql-datasource": "^0.0.7",
    "bcrypt": "^5.1.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.7.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "os": "^0.1.2",
    "pg": "^8.11.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "_moduleAliases": {
    "#datamappers": "./app/datamappers",
    "#types": "./types/index.d.ts",
    "#resolvers": "./app/resolvers",
    "#enums": "./types/enums.ts",
    "#utils": "./app/utils"
  }
}
