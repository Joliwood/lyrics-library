  "license": "MIT",
  "scripts": {
    "build": "tsc && copyfiles ./app/schemas/*.gql schemas/*.gql dist/",
    "start": "ts-node ./dist/app/index.js",
    "dev": "set DEBUG=app:*,knex* && nodemon --ext js,ts,gql ./app/index.ts",
    "lint": "eslint .",
    "knex:migration": "knex migrate:make",
    "knex:update": "knex migrate:latest",
    "knex:seed": "knex seed:run"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@faker-js/faker": "^8.0.2",
