{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    // noEmit prevent the compiler from generating files
    "noEmit": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "paths": {
      "#datamappers": [
        "./app/datamappers/"
      ],
      "#types": [
        "./types/index.d.ts"
      ],
      "#resolvers": [
        "./app/resolvers/"
      ],
    },
  },
  "include": [
    "./app/**/*",
    "./types/**/*",
    ".eslintrc.cjs",
    "/**/*.ts",
    "app/index.ts",
    "knexfile.js",
  ],
  "exclude": [
    "./dist/**/*",
    "node_modules",
  ]
}